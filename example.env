# Application settings
FLASK_ENV=development  # Set to 'production' in production
FLASK_SECRET_KEY=your_very_secure_secret_key
PORT=3000

# WHOOP API
WHOOP_CLIENT_ID=your_whoop_client_id
WHOOP_CLIENT_SECRET=your_whoop_client_secret
REDIRECT_URI=http://localhost:3000

# Supabase (primary database)
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_USER_ID=admin_user_id_after_signup  # For development/testing

# Admin user (for Supabase initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_admin_password

# OpenAI for AI insights
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini  # Options: gpt-4o, gpt-4o-mini, etc.

# SQLite fallback (if Supabase not available)
DATABASE_URL=sqlite:///burnout_predictor.db